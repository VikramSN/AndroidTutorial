<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ImplicitIntent" >

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/implicitimg"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#fff" />

            <Button
                android:id="@+id/phoneCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#3498DB"
                android:ems="7"
                android:text="Phone Call"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sendSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:ems="8"
                android:text="Send SMS"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/SendEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:ems="9"
                android:text="Send Email"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/launchWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:ems="10"
                android:text="Launch Website"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/googleMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:ems="11"
                android:text="Google Map"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/capturePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:ems="12"
                android:text="Capture Photo"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shareData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:ems="13"
                android:text="Share Data"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/googlePlayStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#3498DB"
                android:ems="14"
                android:text="Open Google Play Store"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sourceCodeImplicitIntent"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="#D35400"
                android:ems="10"
                android:text="Source Code"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3498DB"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/stu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Author by an NiiTian"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>